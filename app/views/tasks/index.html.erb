

<h2 class='bg-success text-light bg-opacity-50 space'>Pending Tasks </h2>
<div id="tasks">

</div>

<table class="table table-striped table-bordered table-hover fading"> 
  <thead class="table-primary"> 
    <tr>
      <th> Completed </th>
      <th> Name </th>
      <th> Description </th>
      <th> Classification </th>
      <th> Deadline   </th>
      <th> User Id </th>
      <th colspan="4"> </th>
    </tr>
  </thead>
  <tbody>
<% @tasks.each do |task| %>

<% if task.user == current_user %>

  <% if !task.completed %>
  <td> 
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled="">
      <label class="form-check-label" for="flexSwitchCheckDisabled">Task Not Completed</label>
    </div>
    </td>
      <td><%= task.name%> </td>
      <td><%= task.description%> </td>
      <td><%= task.classification%> </td>
      <td><%= task.deadline%> </td>
      <td><%= task.user_id%> </td>
      <td><%= link_to 'Show', task %> </td>
      <td><%= link_to 'Reorder', task_reorder_tasks_path(task, name: task.name, description: task.description, classification:task.classification) %> </td>
      <td><%= link_to 'Edit', edit_task_path(task) %> </td>
      <td><%= button_to 'Delete', task, method: :delete, onclick: "return confirm('Are you sure you want to delete this task ?')", class:'text-danger'%></td>

    </tr>
    <% end %>
  <% end %>
  <% end %>

  </tbody>

</table>
